{
    "rulesDirectory": "node_modules/tslint-eslint-rules/dist/rules",
    "rules": {
        "trailing-comma" :true,
        "no-constant-condition" : true,
        "no-duplicate-case": true,
        "class-name": true,
        "no-extra-boolean-cast" : true,
        "no-extra-semi" : true,
        "no-inner-declarations" : true,
        "no-invalid-regexp": true,
        "no-regex-spaces": true,
        "no-irregular-whitespace": true,
        "no-unexpected-multiline": true,
        "use-isnan": true,
        "valid-typeof": true,
        "forin": true,
        "array-bracket-spacing": [
            true,
            "never",
            {
                "singleValue": true,
                "objectsInArrays": true,
                "arraysInArrays": true
            }
        ],

        "no-shadowed-variable": true,
        "comment-format": [
            true,
            "check-space",
            "check-uppercase"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "eofline" : true,
        "no-duplicate-variable": true,
        "no-duplicate-key": true,
        "no-eval": true,
        "no-unreachable" : true,
        "no-empty": true,
        "no-unused-expression" : true,
        "no-inferrable-types" : true,
        "no-internal-module": true,
        "no-trailing-whitespace": true,
        "no-var-keyword": true,
        "no-unused-variable" : [
            true,
            "check-parameters"
        ],
        "no-var-requires" : true,
        "no-use-before-declare" : true,
        "no-arg" : true,
        "no-bitwise" : true,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace",
            "check-else"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "member-ordering" : [
            true,
            "public-before-private",
            "static-before-instance",
            "variables-before-functions"
        ],
        "interface-name" :[
            true,
            "always-prefix"
        ],
        "max-line-length" : 100,
        "jsdoc-format" : true,
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    }
}